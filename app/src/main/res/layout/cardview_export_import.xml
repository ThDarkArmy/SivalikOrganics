<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/export_import_card_view"
    android:background="#EEEEEE">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Date"
                android:id="@+id/date"
                android:textColor="@color/colorAccent"
                android:textSize="17dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/date"
                android:text="Consumer"
                android:id="@+id/consumer"
                android:textColor="@color/colorAccent"
                android:textSize="17dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Amount Paid"
                android:id="@+id/amount_paid"
                android:layout_below="@+id/consumer"
                android:textColor="@color/colorAccent"
                android:textSize="17dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/amount_paid"
                android:text="Milk Amount"
                android:id="@+id/milk_amount"
                android:textColor="@color/colorAccent"
                android:textSize="17dp">
            </TextView>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edit"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_icon"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/delete"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edit"
                android:src="@drawable/delete_icon"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#5c5d5e" />
    </androidx.cardview.widget.CardView>

</LinearLayout>