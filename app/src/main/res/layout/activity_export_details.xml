<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tda.darkarmy.sivalikorganics.activity.exportdetails.ExportDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
               android:layout_weight="1"
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter month and year: mm-yyyy"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:text="Search"
                android:background="#A561C1"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/rl">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total_milk"
                android:text="Total Amount of Milk: "
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#A561C1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/total_money"
                android:text="Total Money Paid: "
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#A561C1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:id="@+id/export_recycler"
            app:layout_constraintVertical_weight="1">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>