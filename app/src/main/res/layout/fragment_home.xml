                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Expenses"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp"/>

                    <ImageView
                        android:id="@+id/expenses_img"
                        android:layout_width="65dp"
